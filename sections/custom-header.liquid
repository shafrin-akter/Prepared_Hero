{% liquid
  assign menus = section.settings.menu.links
%}
<div class="headerSection">
  <div class="container">
    <div class="logo"></div>
    <nav>
      <ul class="menuPart">
        {% for menu in menus %}
          <li><a {% if menu.active %} active {% endif %} href="{{ menu.url }}">{{ menu.title }}</a></li>
        {% endfor %}
      </ul>
    </nav>
    <div class="cart"></div>
  </div>
</div>
{% schema %}
  {
    "name": "Custom Header",
    "settings": [
      {
        "type": "link_list",
        "id": "menu",
        "label": "Menu"
      }
    ]
  }
{% endschema %}
<style>
  .container{
    max-width:1300px;
    width:100%;
    margin:0 auto;
  }
 nav .menuPart {
    display: flex;
    list-style: none;
    gap: 10px;
    justify-content: center;
}
nav .menuPart a{
  text-decoration:none;
  color:#000;
  display:block;
  padding:5px 10px;
}
nav .menuPart a .active{
  background-color:#000;
  color:red;
  
 
}
</style>