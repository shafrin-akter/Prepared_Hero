{% schema %}
{
  "name": "Custom Product Info",
  "settings": [
    {
      "type": "product",
      "id": "product",
      "label": "Select Product"
    }
  ],
  "blocks": [
    {
      "type": "tab",
      "name": "Tab",
      "settings": [
        {
          "type": "text",
          "id": "tab_title",
          "label": "Tab Title"
        },
        {
          "type": "richtext",
          "id": "tab_content",
          "label": "Tab Content"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Product Info",
      "category": "Product"
    }
  ]
}
{% endschema %}

{% assign product = all_products[section.settings.product] %}
{% if product %}
<div class="custom-product-info">
  <!-- Gallery -->
  <div class="product-gallery">
    {% for image in product.images %}
      <img src="{{ image | img_url: '400x' }}" alt="{{ product.title }}" />
    {% endfor %}
  </div>

  <!-- Product Details & Form -->
  <div class="product-details">
    <h2>{{ product.title }}</h2>

    <div class="price">
      {% if product.compare_at_price_max > product.price %}
        <span class="sale-price">{{ product.price | money }}</span>
        <span class="compare-price">{{ product.compare_at_price_max | money }}</span>
      {% else %}
        <span>{{ product.price | money }}</span>
      {% endif %}
    </div>

    <!-- Form -->
    {% form 'product', product %}
      {% unless product.has_only_default_variant %}
        <label for="variant">Choose Variant:</label>
        <select name="id" id="variant-select">
          {% for variant in product.variants %}
            <option value="{{ variant.id }}">
              {{ variant.title }} {% if variant.available == false %}(Sold out){% endif %}
            </option>
          {% endfor %}
        </select>
      {% else %}
        <input type="hidden" name="id" value="{{ product.variants.first.id }}">
      {% endunless %}

      <!-- Quantity -->
      <label for="quantity">Quantity:</label>
      <div class="quantity-control">
        <button type="button" class="qty-btn minus">-</button>
        <input type="number" name="quantity" id="quantity" min="1" value="1" />
        <button type="button" class="qty-btn plus">+</button>
      </div>

      <button type="submit" class="btn">Add to Cart</button>
    {% endform %}

    <!-- Tabs -->
    <div class="tab-wrapper">
      <ul class="tab-nav">
        {% for block in section.blocks %}
          <li class="tab-link{% if forloop.first %} active{% endif %}" data-tab="tab-{{ forloop.index }}">{{ block.settings.tab_title }}</li>
        {% endfor %}
      </ul>
      {% for block in section.blocks %}
        <div class="tab-content{% if forloop.first %} active{% endif %}" id="tab-{{ forloop.index }}">
          {{ block.settings.tab_content }}
        </div>
      {% endfor %}
    </div>
  </div>
</div>
{% else %}
<p>Please select a product from the section settings.</p>
{% endif %}

<style>
.custom-product-info {
  display: flex;
  flex-wrap: wrap;
  gap: 2rem;
}
.product-gallery {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 1rem;
}
.product-gallery img {
  max-width: 100%;
  border-radius: 8px;
  border: 1px solid #ddd;
}
.product-details {
  flex: 1;
}
.price .sale-price {
  color: #e53935;
  font-weight: bold;
}
.price .compare-price {
  text-decoration: line-through;
  margin-left: 10px;
  color: #888;
}
.quantity-control {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  margin: 1rem 0;
}
.qty-btn {
  background: #eee;
  padding: 5px 10px;
  border: none;
  cursor: pointer;
}
.tab-wrapper {
  margin-top: 2rem;
}
.tab-nav {
  display: flex;
  gap: 1rem;
  list-style: none;
  padding: 0;
  border-bottom: 1px solid #ccc;
}
.tab-link {
  cursor: pointer;
  padding: 0.5rem 1rem;
  border-bottom: 2px solid transparent;
}
.tab-link.active {
  border-color: #000;
  font-weight: bold;
}
.tab-content {
  display: none;
  margin-top: 1rem;
}
.tab-content.active {
  display: block;
}
</style>

<script>
document.addEventListener("DOMContentLoaded", function () {
  // Tab click handler
  document.querySelectorAll(".tab-link").forEach((tab, index) => {
    tab.addEventListener("click", () => {
      document.querySelectorAll(".tab-link").forEach(t => t.classList.remove("active"));
      document.querySelectorAll(".tab-content").forEach(c => c.classList.remove("active"));
      tab.classList.add("active");
      document.querySelector("#tab-" + (index + 1)).classList.add("active");
    });
  });

  // Quantity button handler
  document.querySelectorAll(".qty-btn").forEach(btn => {
    btn.addEventListener("click", function () {
      const input = this.parentElement.querySelector("input");
      let value = parseInt(input.value);
      if (this.classList.contains("plus")) value++;
      if (this.classList.contains("minus") && value > 1) value--;
      input.value = value;
    });
  });
});
</script>
