{% liquid
  assign offer = section.settings.offer
%}



{% schema %}
  
  {
    "name": "Section name",
     "presets": [
      {
        "name": "Offer"
      }
    ],
    "settings": [
      {
        "type": "image_picker",
        "id": "offer",
        "label": "Add Media"
      },
      {
        "type": "url",
        "id": "url",
        "label": "Add URL"
      },
      {
        "type": "checkbox",
        "id": "newtab",
        "label": "Open New Tab",
        "default":false
      },
      {
        "type": "header",
        "content": "Section Style"
      },
      {
        "type": "text",
        "id": "padding",
        "label": "Section Padding",
        "default": "10px 10px"
      },
      {
        "type": "select",
        "options": [
          {
            "label": "Select Width",
            "value": ""
          },
          {
            "label": "Container",
            "value": "1400px"
          },
          {
            "label": "Page Width",
            "value": "1200px"
          },
          {
            "label": "Narrow",
            "value": "900px"
          }
        ],
        "default":"",
        "id": "section_width",
        "label": "Section Width"
      },
      {
        "type": "color",
        "id": "bg_color",
        "label": "Background Color"
      }
    ]
   
  }
{% endschema %}