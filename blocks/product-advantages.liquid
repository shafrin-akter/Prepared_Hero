{% liquid
  assign flex = block.settings.flex
  assign img = block.settings.img
  assign advantages = block.settings.advantages
  
%}

{% if flex == true %}
  
  {% assign display-flex = "flex" %}
  
{% endif %}

<div class="product-advantages">
  <div class="content">
    <img src="{{ img | img_url:"12200x" }}"  />
    <h3>{{ advantages }}</h3>
  </div>
</div>

<style>
  .product-advantages{
    display:{{display-flex}}
  }
</style>
{% schema %}
  {
    "name": "Product Advantages",
    "settings": [
      {
        "type": "checkbox",
        "id": "flex",
        "label": "Display Flex",
        "default":false
      },
      {
        "type": "image_picker",
        "label": "Image",
        "id": "img"
      },
      {
        "type": "text",
        "label": "Text",
        "id": "advantages"
      }
    ],
    "presets": [
      {
        "name": "Product Advantages"
      }
    ]
  }
{% endschema %}