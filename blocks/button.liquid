{% liquid
  assign top = block.settings.topText
  assign bottomText = block.settings.bottomText
%}
<div>
  <p>{{ top }}</p>
  <a>Get Prepared Today!</a>
  <div>
    <img src="{{ icon | asset_url }}">
    <p>{{ bottomText }}</p>
  </div>
  
</div>

{% schema %}
  {
    "name": "Button",
    "settings": [
      {
        "type": "text",
        "label": "Top Text",
        "id": "topText"
      },
      {
        "type": "text",
        "label": "Bottom Text",
        "id": "bottomText"
      },
      {
        "type": "text",
        "label": "Button",
        "id": "buttonText"
      },
      
    ],
    "presets": [
      {
        "name": "Button"
      }
    ]
  }
{% endschema %}