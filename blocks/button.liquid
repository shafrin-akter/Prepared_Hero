{% liquid
  assign top = block.settings.topText
  assign bottomText = block.settings.bottomText
  assign buttonText = block.settings.buttonText
  assign url = block.settings.url
%}
<div class="btn_content">
  {% if top != blank %}
   <p class="btn_bundle_text poppins-medium">{{ top }}</p>
  {% endif %}
  {% if bottomText != blank %}
   <a class="btn " href="{{ url}}">{{ buttonText }}</a>
  {% endif %}
  
 {% if bottomText != blank %}
   
   
    <p class="bottomtext poppins-medium"> <img src="{{ 'icon.png' | asset_url }}" width="15" height="15"  alt="Icon">{{ bottomText }}</p>
 
  {% endif %}
  
</div>
<style>
  .bottomtext{
    display:flex;
    align-items: center;
    justify-content: center;
    font-size:12px;
    font-weight: 500;
    margin:0;
   
  }
  .btn_content{
    text-align: center;
    max-width: 390px;
    width:100%;
    margin-top:29px;
  }
 .btn {
    text-decoration: none;
    color: #fff;
    background-color: #d70000;
    border-radius: 8px;
    font-size: 26px;
    font-weight: 700;
    border: 1px solid #000000;
    padding: 10px 62px;
    display: inline-block;
    transition: transform 0.3s ease-in-out;
    animation: pulse 1.5s infinite;
}
@keyframes pulse {
    0% {
        transform: scale(1);
    }
    50% {
        transform: scale(1.05);
    }
    100% {
        transform: scale(1);
    }
}
</style>
{% schema %}
  {
    "name": "Button",
    "tag":null,
    "settings": [
      {
        "type": "text",
        "label": "Top Text",
        "id": "topText"
      },
      {
        "type": "text",
        "label": "Bottom Text",
        "id": "bottomText"
      },
      {
        "type": "text",
        "label": "Button",
        "id": "buttonText"
      },
      {
        "type": "url",
        "id": "url",
        "label": "Add URL"
      }
      
      
    ],
    "presets": [
      {
        "name": "Button"
      }
    ]
  }
{% endschema %}