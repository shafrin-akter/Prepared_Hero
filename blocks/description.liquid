{% liquid
  assign description = block.settings.description
  assign textColor = block.settings.textColor
  assign descriptionWidth = block.settings.descriptionWidth
%}


<style>

  #shopify-block-{{ block.id }}{
    max-width:100%;
    width:{{titleWidth}}%;
  }
</style>
{% schema %}
  {
    "name": "Description",
    "settings": [
    
      {
        "type": "richtext",
        "label": "Description",
        "id": "description",
        "default":"<p>lfjkljf<p>"
      },
      {
        "type": "color",
        "label": "Color",
        "id": "textColor",
        
      },
      {
        "type": "range",
        "id": "descriptionWidth",
        "label": "Width",
        "unit": "%",
        "min": 0,
        "max": 100,
        "step": 1,
        "default":100
      }
    ],
    "presets": [
      {
        "name": "Description"
      }
    ]
  }
{% endschema %}