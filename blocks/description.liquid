{% liquid
  assign description = block.settings.description
  assign textColor = block.settings.textColor
  assign descriptionWidth = block.settings.descriptionWidth
  assign fontSize = block.settings.fontSize
  assign fontStyle = block.settings.fontFamily
%}

 <div class="poppins-regular">
   {{ description }}
 </div>

<style>

  #shopify-block-{{ block.id }} {
    max-width: 100%;
    width: {{ descriptionWidth }}%;
  }
  #shopify-block-{{ block.id }} p {
    color: {{ textColor }};
    font-size: {{ fontSize }}px;
  }
</style>

{% schema %}
{
  "name": "Description",
  "settings": [
    {
      "type": "richtext",
      "label": "Description",
      "id": "description",
      "default": "<p>Description</p>"
    },
    {
      "type": "range",
      "label": "Font Size",
      "id": "fontSize",
      "unit": "px",
      "step": 1,
      "min": 10,
      "max": 100,
      "default": 16
    },
    {
      "type": "color",
      "label": "Color",
      "id": "textColor",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "descriptionWidth",
      "label": "Width",
      "unit": "%",
      "min": 50,
      "max": 100,
      "step": 1,
      "default": 100
    }
  ],
  "presets": [
    {
      "name": "Description"
    }
  ]
}
{% endschema %}
